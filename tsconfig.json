{
  "include": ["./lib/**/*.ts"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "esnext",
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "resolveJsonModule": true
  }
}
